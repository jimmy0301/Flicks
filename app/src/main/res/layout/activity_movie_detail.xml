<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.flicks.activities.MovieDetailActivity">

   <com.google.android.youtube.player.YouTubePlayerView
      android:id="@+id/player"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/tvDetailTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_marginTop="@dimen/tvDetail_top"
       android:layout_below="@+id/player"/>

   <TextView
       android:id="@+id/tvReleaseDate"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="@dimen/tvReleaseDate_right"
       android:layout_marginBottom="@dimen/tvReleaseDate_bottom"
       android:text="New text"
       android:layout_below="@+id/tvDetailTitle"/>

   <RatingBar
       android:id="@+id/ratingBar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/tvReleaseDate"
       android:numStars="5"/>

   <TextView
       android:id="@+id/tvDetailOverview"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="@dimen/tvDetailOverview_right"
       android:layout_marginBottom="@dimen/tvDetailOverview_bottom"
       android:text="New text"
       android:layout_below="@+id/ratingBar"/>

</RelativeLayout>
